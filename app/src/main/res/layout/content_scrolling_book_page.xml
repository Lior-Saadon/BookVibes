<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:columnCount="2"
        android:rowCount="7"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/book_name"
            android:fontFamily="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/book_name_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="serif"
            android:text="The Secret"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Author:"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/book_author_content"
            android:layout_width="wrap_content"
            android:fontFamily="serif"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Mike Zbale"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/book_gener"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Vibe Genre:"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/book_genre_content"
            android:layout_width="wrap_content"
            android:fontFamily="serif"
            android:layout_height="wrap_content"
            android:text="Deep Meditation"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <!-- -->

        <View
            android:id="@+id/SplitLine_hor1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_columnSpan="2"
            android:layout_margin="5dp"
            android:background="@color/divider_grey" />

        <!-- -->

        <TextView
            android:id="@+id/current_owner_title"
            android:layout_width="wrap_content"
            android:fontFamily="serif"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_margin="8dp"
            android:text="@string/current_owner"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <!-- -->

        <ImageView
            android:id="@+id/current_owner_profile_pic"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_rowSpan="2"
            android:src="@mipmap/man_icon"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/current_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:layout_marginStart="20dp"
            android:text="David Ben Gurion"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/whatsapp_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_whatsapp"
                android:layout_marginStart="20dp" />

            <ImageView
                android:id="@+id/fb_messenger_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:src="@mipmap/ic_facebook_messenger" />

            <ImageView
                android:id="@+id/gmail_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:src="@mipmap/ic_gmail" />

        </LinearLayout>

        <!-- -->

        <Button
            android:id="@+id/got_the_book_button"
            android:layout_columnSpan="2"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="8dp"
            android:width="150dp"
            android:background="@drawable/got_the_book_button_unpressed"
            android:fadingEdge="horizontal"
            android:fontFamily="serif"
            android:text="I Got This Book!"
            android:textAlignment="center" />

        <!-- -->

        <View
            android:id="@+id/SplitLine_hor2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_columnSpan="2"
            android:layout_margin="5dp"
            android:background="@color/divider_grey" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="353dp"
            android:layout_columnSpan="2"
            android:src="@drawable/static_timeline" />


        <!-- -->




    </GridLayout>














</android.support.v4.widget.NestedScrollView>